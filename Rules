#!/usr/bin/env ruby

compile '/stylesheet/' do
  # None
end

route '/stylesheet/' do
  '/style.css'
end

compile '*' do
  unless item.binary?
    case item[:extension]
    when 'haml'
      filter :haml
    when 'md'
      filter :kramdown
    else
      filter :erb
    end
    layout 'default'
  end
end

route '*' do
  if item.binary?
    item.identifier.chop + '.' + item[:extension]
  else
    item.identifier + 'index.html'
  end
end

layout '*', :haml
