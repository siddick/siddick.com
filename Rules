#!/usr/bin/env ruby

compile '/assets/*/' do
  filter :sprockets, {
    :css_compressor => :scss,
    :js_compressor  => :uglifier }
end

route '/assets/*/' do
  asset_path(item)
end

compile '*' do
  unless item.binary?
    case item[:extension]
    when 'haml'
      filter :haml
    else
      filter :erb
      filter :kramdown
    end
    layout 'default'
  end
end

route '*' do
  if item.binary?
    item.identifier.chop + '.' + item[:extension]
  else
    item.identifier + 'index.html'
  end
end

layout '*', :haml
