#!/usr/bin/env ruby

SprockertsFilertOption = {
  :css_compressor => :scss,
  :js_compressor  => :uglifier }

compile '/assets/*/' do
  unless item.identifier =~ /\/_/
    filter :sprockets, SprockertsFilertOption
  end
end

route '/assets/*/' do
  unless item.identifier =~ /\/_/
    asset_path(item)
  end
end

compile '*' do
  unless item.binary?
    case item[:extension]
    when 'haml'
      filter :haml
    else
      filter :erb
      filter :kramdown
    end
    layout 'default'
  end
end

route '*' do
  if item.binary?
    item.identifier.chop + '.' + item[:extension]
  else
    item.identifier + 'index.html'
  end
end

layout '*', :haml
