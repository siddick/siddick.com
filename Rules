#!/usr/bin/env ruby


preprocess do
  tag_items.each do |tag, items|
    self.items << Nanoc::Item.new(
      "",
      {:tag => tag, :icon => "header-tag", :items => items, :title => tag.humanize},
      "/tags/#{tag}/")
  end
end

SprockertsFilertOption = {
  :css_compressor => :scss,
  :js_compressor  => :uglifier }

compile '/assets/*/' do
  unless item.identifier =~ /\/_/
    filter :sprockets, SprockertsFilertOption
  end
end

route '/assets/*/' do
  unless item.identifier =~ /\/_/
    asset_path(item)
  end
end

compile '/tags/*/' do
  layout 'tag'
  layout 'default'
end

compile '*' do
  unless item.binary?
    case item[:extension]
    when 'haml'
      filter :haml
    else
      filter :erb
      filter :kramdown
    end
    layout 'default'
  end
end

route '*' do
  if item.binary?
    item.identifier.chop + '.' + item[:extension]
  else
    item.identifier + 'index.html'
  end
end

layout '*', :haml
